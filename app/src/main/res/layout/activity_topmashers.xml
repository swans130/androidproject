        android:layout_marginLeft="-20dp"
        android:layout_marginTop="-10dp"
        android:layout_alignLeft="@+id/ibT2Negative"
        android:layout_alignTop="@+id/ibT2Negative"/>
    <ImageButton
        android:id="@+id/ibT2Negative"
        android:layout_width="40dp"
