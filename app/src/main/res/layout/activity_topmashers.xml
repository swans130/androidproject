        android:layout_below="@+id/ibT1Negative"
        android:layout_alignLeft="@id/ibT1Negative"
        android:layout_marginRight="60dp"
        android:id="@+id/tvTweetT1Negative"/>


    <View
        android:id="@+id/bgT2Negative"
